<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/dollars"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:hint="Enter USD amount to convert"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/ghc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Amount in GHc"
        app:layout_constraintTop_toBottomOf="@+id/dollars"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/convert_button"
        app:layout_constraintTop_toBottomOf="@+id/ghc"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Convert"
        android:layout_marginRight="16dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:id="@+id/random_number_button"
        app:layout_constraintTop_toBottomOf="@+id/convert_button"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:text="Predict Age"
        android:layout_marginRight="16dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>